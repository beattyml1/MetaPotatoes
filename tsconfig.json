{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "out": "built/local/tsc.js",
        "sourceMap": true,
        "outDir": "built/bin"
    },
    "exclude": ["node_modules"],
    "filesGlobal": [
        "src/*.ts",
        "src/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
